	public class Main {
	    public static void main(String[] args) {
	        Scanner scanner = new Scanner(System.in);
	        int a = 0;
	        System.out.println("Ingresa un número impar: ");
	        int numeroLeido = scanner.nextInt();
	        
	        do {
	            if (numeroLeido % 2 != 0) {
	                System.out.println("Has ingresado un número impar: " + numeroLeido);
	            } else {
	                System.out.println("Has ingresado un número par. Intenta de nuevo: ");
	                numeroLeido = scanner.nextInt();
	            }
	        } while (true); 
	    }
	}


