package juegoNumerosAleatorio;
import java.util.Random;
import java.util.Scanner;

public class AdivinaNumero {
    public static void main(String[] args) {
        Random rand = new Random();
        int numeroAdivinar = rand.nextInt(100) + 1;
        int intentos = 5;
        boolean acertado = false;

        System.out.println("Adivina el número entre 1 y 100. Tienes 5 oportunidades.");

        for (int i = 0; i < intentos && !acertado; i++) {
            System.out.println("Intento " + (i + 1));
            int numeroUsuario = obtenerNumeroUsuario();

            if (numeroUsuario < numeroAdivinar) {
                System.out.println("Busco un número mayor.");
            } else if (numeroUsuario > numeroAdivinar) {
                System.out.println("Busco un número menor.");
            } else {
                acertado = true;
            }
        }

        if (acertado) {
            System.out.println("¡Enhorabuena! Has adivinado el número.");
        } else {
            System.out.println("GAME OVER. El número que tenías que adivinar era: " + numeroAdivinar);
        }
    }

    public static int obtenerNumeroUsuario() {
        try (Scanner scanner = new Scanner(System.in)) {
			int numeroUsuario;

			do {
			    System.out.print("Introduce un número entre 1 y 100: ");
			    while (!scanner.hasNextInt()) {
			        System.out.println("Entrada no válida. Debes introducir un número entre 1 y 100.");
			        System.out.print("Introduce un número entre 1 y 100: ");
			        scanner.next();
			    }
			    numeroUsuario = scanner.nextInt();
			} while (numeroUsuario < 1 || numeroUsuario > 100);

			return numeroUsuario;
		}
    }
}